<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.house.model.mapper.UserMapper">
	
	<!-- <resultMap type="java.util.HashMap" id="userIDMap">
		<result column="user_id" property="user_id" />
	</resultMap> -->
	
	<!-- 회원가입 메소드 -->
	<insert id="insertUser" parameterType="user">
		insert into user
		values (#{user_id}, #{user_name}, #{user_password}, #{user_birth})
	</insert>
	
	<!-- role 입력 -->
	<insert id="insertRole" parameterType="user">
		insert into authority (user_id)
		values (#{user_id})
	</insert>
	
	<!-- 로그인 체크 -->
	<select id="signIn" resultType="int" parameterType="user">
		select count(*)
		from user
		where user_id = #{user_id} and user_password = #{user_password}
	</select>
	
	<!-- 아이디 찾기 -->
	<!-- <select id="selectUserId" parameterType="user" resultType="userIDMap">
		select user_id
		from user
		where user_name = #{user_name} and user_birth = #{user_birth}
	</select> -->
	
	<!-- 회원 정보 조회 -->
	<!-- 비밀번호 찾기 -->
	<select id="selectUserInfo" resultType="user" parameterType="HashMap">
		select *
		from user
		where user_id = #{user_id}
	</select>
	
	<!-- 회원 정보 조회 (비밀번호 X) -->
	<select id="selectUserInfoNoPassword" resultType="user" parameterType="HashMap">
		select user.user_id, user_name, user_birth, user_role
		from user 
		inner join authority
		on user.user_id = authority.user_id
		where user.user_id = #{user_id}
	</select>
	
	<!-- 회원 정보 수정(비밀번호 X) -->
	<update id="updateUser" parameterType="user">
		update user
		set user_name = #{user_name}, user_birth = #{user_birth}
		where user_id = #{user_id}
	</update>
	
	<!-- 회원 정보 수정(비밀번호) -->
	<update id="updatePassword" parameterType="user">
		update user
		set user_password = #{user_password}
		where user_id = #{user_id}
	</update>
	
	<!-- 회원정보 삭제 -->
	<delete id="deleteUser" parameterType="HashMap">
		delete from user
		where user_id = #{user_id}
	</delete>
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" resultType="int" parameterType="HashMap">
		select count(user_id)
		from user
		where user_id = #{user_id}
	</select>
</mapper>